<main role="main">
  <ul class="entries-list no-bullets no-padding">
    {{#each entries}}
    <li class="entry-item pad-b-4">
      <a href="/entries/{{id}}" class="entry-title font-2 pad-b-1-4 c-white">{{title}}</a>
      <span class="entry-date block font-3-4 c-lt-gray">Written on {{date}} by <a href="/users/{{authorID._id}}/entries"
          class="entry-date c-lt-gray">{{authorID.username}}</a></span>
      <p class="entry-stub">{{body}}</p>
    </li>
    {{/each}}
  </ul>
</main>