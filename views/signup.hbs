<h1>Create a Broccoli Blog Account</h1>

{{#if errors}}
<span>Something went wrong:</span>
<ul class="error-list pad-b-2">
    {{#each errors as |error|}}
    <li class="error-item">{{error}}</li>
    {{/each}}
</ul>
{{/if}}

<form id='signup-form' method="post" action="/signup">
    <label for="username-input" class="block mar-b-1">Username:</label>
    <input id="username-input" name="username" type="text" tabindex="1"
        class="block w-100 no-outline no-border pad-1 mar-b-2">

    <label for="email-input" class="block mar-b-1">E-mail:</label>
    <input id="email-input" name="email" type="email" tabindex="1"
        class="block w-100 no-outline no-border pad-1 mar-b-2">

    <label for="password-input" class="block mar-b-1">Password:</label>
    <input id="password-input" name="password" type="password" tabindex="1"
        class="block w-100 no-outline no-border pad-1 mar-b-2"''>

    <input type="submit" value="Create Account" tabindex="3"
        class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>